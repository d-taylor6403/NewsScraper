<!--Jumbotron-->
<div class="jumbotron text-center">
    <div class="overlay"></div>
    <div class="background-image"></div>
    <div class="caption">
        <h1> Headline News</h1>
        <p>The Tennessean Edition</p>
    </div>
</div>

<!--Main Article Container-->
<div class="container-fluid article-container">
    <div class="row">
        <div class="col s2">
            <div class="col s8 left-align">
                {{#each article}}
                <div class="card-panel">
                    <h4>{{this.title}}</h4>
                    <a href="/readArticle/{{this._id}}" class="btn btn-info" id="btnSignUp">Read Article</a>
                </div>
            </div>
        </div>
    </div>
</div>