<!--Jumbotron-->
<div class="jumbotron text-center">
    <div class="overlay"></div>
    <div class="background-image"></div>
    <div class="caption">
        <h1> Headline News</h1>
        <p>The New York Times Edition</p>
    </div>
</div>

<!--Main Article Container-->

<div class="row">
    <div class="col s2">
        <div class="col s8 left-align">
            {{#each article}}
            <div class="card">
                <div class="card-header">
                    <h3>{{this.title}}</h3>
                    <h4>{{this.byline}}</h4>
                    <div class="card-body">
                        <h4>{{this.summary}}</h4>
                        <img src={{this.image}}>
                        <a href="/readArticle/{{this._id}}" class="btn btn-info" id="btnSignUp">Read Article</a>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</div>